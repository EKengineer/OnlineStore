@using Store_Memory;
@using System;
@model List<Product>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<div class="row">
    @if (Model == null)
    {
        <h1 class="text-center">Товар не найден</h1>
    }
    else
    {
    @foreach (var product in Model)
    {

        <div class="col-4 card shadow">
            <img class="card-img-top" src="@product.Link" />
            <div class="card-body">
                <a style="color: black" href="/product/index/@product.Id">
                    <h5>@product.Name</h5>
                </a>
                <h5>@product.Cost руб </h5>
                <a class="btn btn-primary" href="/Cart/AddItem/@product.Id" role="button">В корзину</a>
            </div>
        </div>
    }
    }

</div>