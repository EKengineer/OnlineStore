                <input type="email" asp-for="UserName" class="form-control" placeholder="email@example.com">
                <span asp-validation-for="UserName"></span>
            </div>
            <div class="mb-3">
                <label  class="form-label" asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class=" form-control" placeholder="Password">
                <span asp-validation-for="Password"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="ConfirmPassword">Password</label>
                <input asp-for="ConfirmPassword" type="password" class=" form-control" placeholder="ConfirmPassword" Compare>
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <button type="submit" class="btn btn-primary" asp-area="" asp-controller="Accaunt" asp-action="SignUp">Зарегистрироваться</button>
            <div class="dropdown-divider"></div>
