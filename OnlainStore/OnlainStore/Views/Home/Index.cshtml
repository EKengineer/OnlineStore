@using Store;
@using System;
@model List<Product>

<div class="row">

    @foreach (var product in Model)
    {

        <div class="col-4 card shadow">
            <img class="card-img-top" src="@product.Link" />
            <div class="card-body">
                <a style="color: black" href="/product/index/@product.Id">
                    <h5>@product.Name</h5>
                </a>
                <h5>@product.Cost руб </h5>
                <a class="btn btn-primary" href="/Cart/AddItem/@product.Id" role="button">В корзину</a>
            </div>
        </div>
    }

</div>




