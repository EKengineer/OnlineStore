@model Orders
<form method="post">
    <div class="row text-center">
        <div class="col">
            <div>
                <label asp-for="Name">Введите ФИО</label>

                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
            <div>
                <label asp-for="Address">Введите адрес доставки</label>

                <input asp-for="Address" />
                <span asp-validation-for="Address"></span>
                <div>
                    <label asp-for="Phone">Введите телефон</label>

                    <input asp-for="Phone" />
                    <span asp-validation-for="Phone"></span>
                </div>
                <br />
                <button class="btn btn-success" type="submit" asp-controller="Order" asp-action="Buy">Оформить заказ</button>
            </div>
            </div>
        </div>
</form>

