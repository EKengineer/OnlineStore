@model OrderModel
@{
    ViewData["Title"] = "Корзина";
}

<h1>Корзина</h1>

<table class="table table-sm table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">№</th>
            <th scope="col">Товар</th>
            <th scope="col">Описание</th>
            <th scope="col">Количество</th>
            <th scope="col">Цена</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Items.Length; i++)
        {
            <tr>
                <td class="text-right">@(i + 1)</td>
                <td>@Model.Items[i].ProductName</td>
                <td>@Model.Items[i].Description</td>
                <td class="text-right">@Model.Items[i].Count</td>
                <td class="text-right">@Model.Items[i].Price</td>
                <td class="text-center">
                    <a class="btn btn-success" href="/Order/AddItem/@Model.Items[i].ProductId" role="button">+</a>
                    <a class="btn btn-danger" href="/Order/ReduceItem/@Model.Items[i].ProductId" role="button">-</a>
                </td>
                <td class="text-left">
                    <a class="btn btn-danger" href="/Order/RemoveItem/@Model.Items[i].ProductId" role="button">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Итого</td>
            <td class="text-right">@Model.TotalCount</td>
            <td class="text-right">@Model.TotalPrice</td>
        </tr>
    </tfoot>
</table>


