@model OnlineStore.Areas.Admin.Modals.EditUser
<form>
    <div class="form-group">
        <label asp-for="Email">Email(логин)</label>
        <input type="Email" class="form-control" asp-for="Email" placeholder="Введите Email">
        <span asp-validation-for="Email"></span>

    </div>
    <div class="form-group">
        <label asp-for="Phone">Телефон</label>
        <input type="text" class="form-control" asp-for="Phone" placeholder="Введите телефон">
        <span asp-validation-for="Phone"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name">ФИО</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Введите ФИО">
        <span asp-validation-for="Name"></span>
    </div>
      <div class="form-group">
        <label asp-for="Address">Адрес</label>
        <input type="text" class="form-control" asp-for="Address" placeholder="Введите адрес">
        <span asp-validation-for="Address"></span>
    </div>

</form>