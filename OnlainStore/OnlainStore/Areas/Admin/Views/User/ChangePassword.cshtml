@model OnlineStore.Areas.Admin.Modals.ChangePassword
<form>
    <div class="form-group">
        <label asp-for="Password">Пароль</label>
        <input type="password" class="form-control" asp-for="Password" placeholder="Введите пароль">
        <span asp-validation-for="Password"></span>

    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword">Подтверждение пароля</label>
        <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Подтвердите пароль">
        <span asp-validation-for="ConfirmPassword"></span>
    </div>

</form>