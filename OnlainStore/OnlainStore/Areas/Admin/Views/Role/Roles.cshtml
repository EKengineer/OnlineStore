@model List<Role>

<div class="col-10 card shadow">
    <table class="table table-sm">
        <thead class="thead-dark">
            <tr>
                <th class="col-2" scope="col"><h3>Список ролей</h3></th>
                <th class="col-2" scope="col"></th>
                <th class="col-2" scope="col"></th>
                <th class="col-2" scope="col"></th>
                <th class="col-2" scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td class="col-2" scope="col">@role.Name</td>
                    <th class="col-2" scope="col"></th>
                    <th class="col-2" scope="col"></th>
                    <td class="col-2" scope="col"></td>
                    <td class="col-2" scope="col"><a type="submit" class="btn btn-danger"
                       asp-area="Admin"
                       asp-controller="Role"
                       asp-action="RemuveRoles"
                       asp-route-roleName="@role.Name">
                        Удалить роль
                        </a></td>
                </tr>
            }
            <tr>
                <td class="col-2" scope="col"></td>
                <th class="col-2" scope="col"></th>
                <th class="col-2" scope="col"></th>
                <td class="col-2" scope="col"></td>
                <td class="col-2" scope="col"> <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#AddRole">
                        Добавить роль
                    </button>
                </td>
            </tr>
        </tbody>
    </table>
</div>


<form method="post" class="modal fade" id="AddRole" tabindex="-1" aria-labelledby="AddRole" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="AddRole">Добавить новую роль</h5>
            </div>
            <div class="modal-body">
                <form action="/Admin/AddRoles">
                    <div class="form-group">
                        <input class="form-control mr-sm-2" type="text" name="roleName" Required placeholder="Введите новую роль" />
                    </div>
                </form>
            </div>
            <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary"
                        asp-area="Admin" asp-controller="Role" asp-action="AddRoles">
                    Добавить роль
                </button>
            </div>
        </div>
    </div>
</form>
